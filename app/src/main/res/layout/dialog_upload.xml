<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/tip_upload_please"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/popup_menu_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/color_device"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/tip_upload_please_link"
        android:textSize="18sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shared_wifi_cancel"
            style="@style/style_home_text_view"
            android:background="@drawable/selector_bottom_text_common"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:gravity="center"
            android:text="@string/str_cancel" />


        <Button
            android:id="@+id/shared_wifi_settings"
            style="@style/style_home_text_view"
            android:background="@drawable/selector_bottom_text_common"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_setnetwork" />
    </LinearLayout>

</LinearLayout>
